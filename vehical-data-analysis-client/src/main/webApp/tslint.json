{
	"rulesDirectory": ["node_modules/codelyzer"],
	"rules": {
		// ************************************
		// Angular Rules (http://codelyzer.com/rules/)
		// ************************************

		// Angular Rules -> Functionality
		"no-attribute-decorator": true,
		"no-output-native": true,
		"use-life-cycle-interface": true,
		// Angular Rules -> Maintainability
		"component-max-inline-declarations": true,
		"no-conflicting-lifecycle": true,
		"no-forward-ref": true,
		"no-output-on-prefix": true,
		"no-output-rename": true,
		"no-unused-css": true,
		"prefer-output-readonly": true,
		"use-component-selector": true,
		"use-pipe-transform-interface": true,
		"component-class-suffix": [true, "Component"],
		"component-selector": [true, ["element", "attribute"], ["vehicle", "shared"], "kebab-case"],
		"directive-class-suffix": [true, "Directive"],
		"directive-selector": [true, "attribute", ["vehicle", "shared"], "camelCase"],
		"no-host-metadata-property": true,
		"no-inputs-metadata-property": true,
		"no-outputs-metadata-property": true,
		// "pipe-prefix": [true, "vehicle"],

		// ************************************
		// TSLint Rules (https://palantir.github.io/tslint/rules/)
		// ************************************

		// TSLint Rules -> TypeScript -specific
		"no-any": {
			"severity": "off"
		},
		"no-empty-interface": true,
		"no-magic-numbers": {
			"severity": "off"
		},
		"no-non-null-assertion": true,
		"no-parameter-reassignment": false,
		// -> true
		"unified-signatures": true,
		// TSLint Rules -> Functionality
		"await-promise": true,
		"curly": true,
		"forin": true,
		"import-blacklist": [true, "rxjs/Rx"],
		"label-position": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-console": true,
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-super": true,
		"no-duplicate-switch-case": true,
		"no-empty": false,
		"no-eval": true,
		"no-misused-new": true,
		"no-shadowed-variable": true,
		"no-string-literal": true,
		"no-string-throw": true,
		"no-switch-case-fall-through": true,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"radix": true,
		"triple-equals": [true, "allow-null-check"],
		// TSLint Rules -> Maintainability
		"cyclomatic-complexity": {
			"options": [10],
			"severity": "off"
			// -> warn ???
		},
		"deprecation": {
			"severity": "warn"
		},
		"max-classes-per-file": {
			"options": [2],
			"severity": "off"
			// -> warn ???
		},
		"max-file-line-count": {
			"options": [300],
			"severity": "off"
			// -> warn ???
		},
		"no-duplicate-imports": true,
		//  -> True
		"object-literal-sort-keys": false,
		"prefer-const": true,
		"prefer-readonly": false,
		// TSLint Rules -> Style
		"arrow-return-shorthand": true,
		"callable-types": true,
		"comment-format": [true, "check-space"],
		"no-unnecessary-initializer": true,
		"one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"]
	}
}
